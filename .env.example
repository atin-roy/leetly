# PostgreSQL
POSTGRES_USER=leetly
POSTGRES_PASSWORD=change_me

# Keycloak — use the PUBLIC URL that Caddy exposes Keycloak on.
# Both the API and web must use this same value because the JWT iss claim
# contains the public URL.
KEYCLOAK_ISSUER_URI=https://auth.yourdomain.com/realms/leetly

# API Keycloak client (bearer-only resource server)
API_KEYCLOAK_CLIENT_ID=leetly-api

# Web Keycloak client (confidential OIDC client)
WEB_KEYCLOAK_CLIENT_ID=leetly
KEYCLOAK_CLIENT_SECRET=get_from_keycloak_client_credentials_tab

# NextAuth
AUTH_SECRET=generate_with___openssl_rand_-base64_32
# Public URL of the frontend — must match Keycloak's valid redirect URI base
AUTH_URL=https://yourdomain.com
